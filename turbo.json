{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", "storybook-static/**"],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_REDIRECT_URL",
        "GEOAPIFY_API_KEY",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_APP_URL",
        "SERVER_PORT",
        "DATABASE_URL",
        "RESEND_API_KEY",
        "RESEND_FROM_EMAIL",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "NEXT_PUBLIC_S3_ENDPOINT",
        "NEXT_PUBLIC_S3_BUCKET_NAME",
        "NEXT_PUBLIC_SERVER_URL",
        "NEXT_PUBLIC_FILE_ENDPOINT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_REDIRECT_URL",
        "GEOAPIFY_API_KEY",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_APP_URL",
        "SERVER_PORT",
        "DATABASE_URL",
        "RESEND_API_KEY",
        "RESEND_FROM_EMAIL",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "NEXT_PUBLIC_S3_ENDPOINT",
        "NEXT_PUBLIC_S3_BUCKET_NAME",
        "NEXT_PUBLIC_SERVER_URL",
        "NEXT_PUBLIC_FILE_ENDPOINT"
      ]
    }
  }
}
